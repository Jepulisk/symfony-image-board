{% extends "base.html.twig" %}

{% block title %}/{{board.name}}/ - {{topic.replies.first.content}}{% endblock %}

{% block body %}

<div class="content">
    <div class="pure-g">
        <div class="pure-u-1-1 text-center">
            <p><a href="{{path("new_reply", {name: board.name, id: topic.id})}}">New Reply</a></p>
        </div>
    </div>
    <div class="pure-g">
        <div class="pure-u-1-1">
        {% for reply in replies %}
            <p>{{reply.tsCreated|date("d.m.Y H:m:s")}}</p>
            <p>{{reply.content}}</p>
        {% endfor %}
        </div>
    </div>
</div>

{% endblock %}
