{% extends "base.html.twig" %}

{% block title %}/{{board.abbreviation}}/ - {{board.name}}{% endblock %}

{% block body %}

<div class="content">
    <div class="pure-g">
        <div class="pure-u-1">
            <h1>/{{board.abbreviation}}/ - {{board.name}}</h1>
        </div>
    </div>
    <div class="pure-g">
        <div class="pure-u-1 text-center">
            <h2><a href="{{path("new_topic", {abbreviation: board.abbreviation})}}">Start a New Topic</a></h2>
        </div>
    </div>
    <div class="pure-g">
        {% for topic in topics %}
            <div class="pure-u-1-2 pure-u-sm-1-3 pure-u-md-1-4 pure-u-lg-1-6 pure-u-xl-1-8">
                {% if topic.replies.first.attachment %}
                    <p><a href="{{path("topic", {abbreviation: board.abbreviation, topic_id: topic.id})}}"><img style="max-width: 100%; height: auto;" src="{{asset('attachments/' ~ topic.replies.first.attachment)}}" alt="{{topic.replies.first.attachment}}"></img></a></p>
                {% endif %}
                <p><a href="{{path("topic", {abbreviation: board.abbreviation, topic_id: topic.id})}}">{{topic.replies.first.content}}</a></p>
            </div>
        {% endfor %}
    </div>
</div>

{% endblock %}
